
@{
    ViewBag.Title = "Cadastro Completo";
    Layout = "~/Views/shared/_layout.cshtml";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="estilo.css">
    <title>SISVEC</title>

</head>

<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a style="color:#008B00" class="navbar-brand" href="/Home/Sisvec">SISVEC</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a style="color:#FF0000" class="navbar-brand" href="/Home/Inicio">INICIO</a></li>
                <li><a style="color:#BA55D3" href="/CadastroCompleto/Index">CADASTRO MENSAL</a></li>
            </ul>

            <form class="navbar-form navbar-left">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="BUSCAR">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>
            </form>           

        </div>
    </nav>

    <div class="row">
        <div class="col-md-6 col-md-offset-5">
            <h2>CADASTRO MENSAL</h2><br />
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-8">

                <h3 class="text-center">DADOS DO CONDUTOR</h3>
                <div class="col-md-5 col-md-offset-3">
                    <label class="sr-only-focusable">Nome Condutor:</label>
                    <input type="text" class="form-control" placeholder="Nome Condutor:" autofocus />
                </div>
                <div class="col-md-5 col-md-offset-3">
                    <label class="sr-only-focusable">CNH:</label>
                    <input type="text" class="form-control" placeholder="CNH:" autofocus />
                </div>
                <div class="col-md-5 col-md-offset-3">
                    <label class="sr-only-focusable">RG:</label>
                    <input type="text" class="form-control" placeholder="RG:" autofocus />
                </div>
                <div class="col-md-5 col-md-offset-3">
                    <label class="sr-only-focusable">CPF:</label>
                    <input type="text" class="form-control" placeholder="CPF:" autofocus />
                </div>
                <div class="col-md-5 col-md-offset-3">
                    <label class="sr-only-focusable">Endereço:</label>
                    <input type="text" class="form-control" placeholder="Endereço:" autofocus />
                </div>
                <div class="col-md-5 col-md-offset-3">
                    <label class="sr-only-focusable">Contato:</label>
                    <input type="text" class="form-control" placeholder="Email ou Telefone:" autofocus />
                </div>
                
            </div>

            <div class="col-sm-4">

                <h3 class="text-center">DADOS DO VEÍCULO</h3>
                <div class="col-md-push-5 col-md-offset-3">
                    <label class="sr-only-focusable">Placa:</label>
                    <input type="text" class="form-control" placeholder="Placa:" autofocus />
                </div>
                <div class="col-md-push-5 col-md-offset-3">
                    <label class="sr-only-focusable">Ano:</label>
                    <input type="text" class="form-control" placeholder="Ano:" autofocus />
                </div>
                <div class="col-md-push-5 col-md-offset-3">
                    <label class="sr-only-focusable">Cor:</label>
                    <input type="text" class="form-control" placeholder="Cor:" autofocus />
                </div>
                <div class="col-md-push-5 col-md-offset-3">
                    <label class="sr-only-focusable">Modelo:</label>
                    <input type="text" class="form-control" placeholder="Modelo:" autofocus />
                </div>               
            </div>
            
        </div>

    </div><br />        
    <div>
        <div class="btn-group-lg">
            <button class="btn btn-default" type="button" onclick="location.href='@Url.Action("Index","CadastroCompleto")'">SALVAR INFORMAÇÕES</button>
        </div><p></p><br />
        <div class="btn-group-lg">
            <button class="btn btn-default" type="button" onclick="location.href='@Url.Action("Inicio","Home")'">CANCELAR</button>
        </div><P></P><br />
        <div class="btn-group-lg">
            <button class="btn btn-default" type="button" onclick="location.href='@Url.Action("Inicio","Home")'">FINALIZAR CADASTRO</button>
        </div><P></P><br /> 

    </div>
    
</body>
<hr>
<footer>
    <center>
        <p>&copy; 2017 - Todos os Direitos Reservados | Desenvolvimento: JMDBI - Versão 1.0</p>
    </center>
</footer>

</html>

