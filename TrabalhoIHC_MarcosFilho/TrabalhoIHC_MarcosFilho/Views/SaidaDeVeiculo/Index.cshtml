
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="estilo.css">
    <title>SISVEC</title>
    <style>
        .modal footer{
    text-align: center;
    padding: 0!important;
    }

    .modal:before {
    content: '';
    display: inline-block;
    height: 100%;
    vertical-align: middle;
    margin-right: -4px;
    }

    .modal-dialog {
    display: inline-block;
    text-align: left;
    vertical-align: middle;
    }
    </style>

</head>

<body>
    <div>

        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a style="color:#008B00" class="navbar-brand" href="/Home/Sisvec">SISVEC</a>
                </div>
                <ul class="nav navbar-nav">
                    <li><a style="color:#FF0000" class="navbar-brand" href="/Home/Inicio">INICIO</a></li>
                    <li><a style="color:#FFFF00" href="/SaidaDeVeiculo/Index">SAÍDA VEICULO</a></li>
                </ul>

                <form class="navbar-form navbar-left">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="BUSCAR">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </nav>
    </div>

    <h2 class="text-center">Saida de Veículo</h2><br />


    <div class="col-md-5 col-md-offset-3">
        <label class="sr-only-focusable">Placa do Carro ou CPF do cliente:</label>
        <input type="text" class="form-control" placeholder="Placa ou CPF" autofocus />
    </div>

    <!-- MOTAL COMEÇA AQUI-->

    <div class="container">
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Confirmar saída</button>

        <!-- Modal -->

        <div id="myModal" class="modal fade " role="dialog">
            <div class="modal-dialog  ">

                <!-- Modal content-->
              <div class="col-md-5 text-center">          
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <p class="modal-title">INFORMAÇÕES SOBRE O CARRO/CLIENTE</p>
                    </div>
                    <div class="modal-body">
                        <p>INFORMAÇÕES SOBRE O CLIENTE E A SAIDA</p>
                    </div>
                    <div class="modal-footer">
                       <center>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Imprimir</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
                       </center>
                    </div>
                </div>
              </div>

            </div>
        </div>
    </div>

    <div>
        <hr>
        <footer>
            <center>
                <p>&copy; 2017 - Todos os direitos reservados | Desenvolvimento: JMDBI - Versão 1.0</p>
            </center>
        </footer>
        </hr>
    </div>
</body>
</html>

