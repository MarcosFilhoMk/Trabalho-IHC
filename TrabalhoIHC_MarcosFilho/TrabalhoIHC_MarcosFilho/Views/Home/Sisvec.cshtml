@model TrabalhoIHC_MarcosFilho.Controllers.HomeController
@{
    ViewBag.Title = "SISVEC";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="estilo.css">
    <title>SISVEC</title>
    <style>
      
    </style>
    
</head>

<body>  
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a style="color:#008B00" class="navbar-brand" href="/Home/Sisvec">SISVEC</a>                
            </div>
            <ul class="nav navbar-nav">                
                <li><a style="color:#8968CD" href="/Informacoes/Index">CONTATO/SOBRE NÓS</a></li> 
            </ul>

                <form class="navbar-form navbar-left">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="BUSCAR">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
        </div>
    </nav>

   
    <div class="row">

        <div class="col-md-8">
            <h2>SISVEC</h2>
            <h3>Sistema de Estacionamento de Veículos</h3>

            <img width="700px" height="500px" src="http://www.gazetadopovo.com.br/ra/mega/Pub/GP/p3/2012/07/22/Automoveis/Imagens/peugeot_quicksilver_2207doze.jpg" class="img-responsive" style="margin: auto" /><br />
            <p align="left">

                <div class="btn-group-lg">
                    <button class="btn btn-danger" type="button" onclick="location.href='@Url.Action("Inicio","Home")'">SEJAM BEM VINDOS AO SISVEC</button>
                </div>

                <div>
                    <h3>Aqui seu veículo esta seguro</h3>
                </div>
        </div>

        <div class="col-md-4">
            <form id="login" method="post" onsubmit="return false();">
                <div class="row">
                    <div class="col-md-6">
                        <label class="control-label" for="usuario">Usuário</label>
                    </div>
                    <div class="col-md-6">
                        <input class="form-control" type="text" name="usuario" id="usuario" placeholder="Digite o seu nome de usuário" />
                    </div>
                    </div>
                <div class="row">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="control-label" for="senha">Senha</label>
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" type="password" name="senha" id="senha" placeholder="Entre com sua senha" />
                        </div>
                    </div>
                    </div>
                <div class="row">
                    <div class="col-md-12">
                        <label class="form-control label"></label>

                        <input class="form-control" type="button" onclick="efetuarLogin()" value="Entrar" />
                        <input class="form-control" type="reset" value="Limpar" />
                    </div>
                </div>
            </form>
           
        </div>
    </div>
</body>

<div>
    <hr>
    <footer>
        <center>
            <p>&copy; 2017 - Todos os Direitos Reservados | Desenvolvimento: JMDBI - Versão 1.0</p>
        </center>
    </footer>
</div>

</html>

